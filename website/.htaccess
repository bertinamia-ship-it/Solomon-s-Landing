# .htaccess para Solomon's Landing
# Mejoras de SEO y Performance

# Habilitar compresi칩n GZIP
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json image/svg+xml
</IfModule>

# Cache del navegador
<IfModule mod_expires.c>
    ExpiresActive On
    
    # Im치genes
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    
    # CSS y JavaScript
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    
    # HTML
    ExpiresByType text/html "access plus 1 week"
    
    # Fuentes
    ExpiresByType font/woff2 "access plus 1 year"
</IfModule>

# Redirecciones 301 - www a no-www
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Forzar HTTPS
    RewriteCond %{HTTPS} off
    RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
    
    # Redirigir www a no-www
    RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
    RewriteRule ^(.*)$ https://%1/$1 [R=301,L]
    
    # Redirecciones de URLs antiguas (si las hay)
    # RewriteRule ^old-page\.html$ /new-page.html [R=301,L]
</IfModule>

# Seguridad - Prevenir hotlinking de im치genes
<IfModule mod_rewrite.c>
    RewriteEngine on
    RewriteCond %{HTTP_REFERER} !^$
    RewriteCond %{HTTP_REFERER} !^https://(www\.)?solomonslanding\.com [NC]
    RewriteRule \.(jpg|jpeg|png|gif|webp)$ - [F,NC]
</IfModule>

# Headers de seguridad
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
    Header set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# P치ginas de error personalizadas
ErrorDocument 404 /404.html
ErrorDocument 500 /500.html

# Deshabilitar listado de directorios
Options -Indexes

# Charset UTF-8
AddDefaultCharset UTF-8
